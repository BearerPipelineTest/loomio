- if poll.show_results? && (poll.decided_voters.exists?(recipient.id) || poll.closed_at?)
  .poll-mailer-common-responses
    %h3= t(:"poll_mailer.common.responses")

    - if poll.anonymous?
      %p= t(:"poll_common_action_panel.anonymous")

    = render "poll_mailer/#{poll.poll_type}/responses", poll: poll, recipient: recipient
- if !poll.show_results?
  %p= t(:"poll_common_action_panel.results_hidden_until_closed")
