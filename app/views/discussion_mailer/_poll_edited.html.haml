- poll = item.eventable
%table
  %tr
    %td{valign: 'top'}
      = render "avatar", user: item.actor
    %td
      %span= t(:"poll_mailer.subject.poll_edited", actor: item.actor.name, poll_type: t("poll_types.#{poll.poll_type}"), title: poll.title)
      .font-italic= render_plain_text(item.recipient_message, 'md')
