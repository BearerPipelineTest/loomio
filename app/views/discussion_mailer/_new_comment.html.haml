- comment = item.eventable
%table
  %tr
    %td{valign: 'top'}
      = render "avatar", user: comment.author
    %td
      - if comment.discarded?
        = t(:'thread_item.removed')
      - else
        %b= comment.author.name
        .formatted-text= render_rich_text(comment.body, comment.body_format)
        = render "discussion_mailer/attachments", resource: comment if comment.documents.any?
