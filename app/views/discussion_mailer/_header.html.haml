%table.t-layout
  %tr
    %td
      = render 'vtfy/avatar', user: event.user
    %td
      %h1.text-caption= t(:"discussion_mailer.#{action_name}.subject_html", actor: event.user.name, discussion: '')
%h1.text-h5
  = link_to(event.eventable.discussion.title, target_url(eventable: event.eventable, recipient: recipient, action_name: action_name))
  - event.eventable.discussion.tags.each do |tag|
    %span.v-chip{style: "color: #{tag.color}; border-color: #{tag.color}"}=tag.name

