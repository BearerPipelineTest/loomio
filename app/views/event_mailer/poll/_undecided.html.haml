- if poll.undecided_voters_count > 0
  .poll-mailer-common-undecided
    %h3= t(:"poll_mailer.common.undecided_members", count: poll.undecided_voters_count)
    %table
      - poll.undecided_voters.each do |user|
        %tr
          %td= render 'base_mailer/avatar', user: user
          %td= user.name
