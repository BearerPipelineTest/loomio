%div.poll-mailer-common-bar-chart.poll-mailer__results-chart
  %table{style: "width: 100%"}
    - poll.poll_options.each_with_index do |poll_option, index|
      %tr
        %td #{poll_option.display_name(zone: @recipient.time_zone || poll.time_zone)}
      %tr
        %td
          %table{style: "width: #{percentage_for(poll, index)}%"}
            %tr
              %td{height: '48px', style: "background-color: #{AppConfig.colors.dig(poll.poll_type, index)}"}
